@using Microsoft.AspNetCore.Identity
@using proiect.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ApplicationUser? currentUser = null;
    string profilePic = "/images/avatar-placeholder.png";

    if (User.Identity.IsAuthenticated)
    {
        currentUser = await UserManager.GetUserAsync(User);
        if (!string.IsNullOrEmpty(currentUser?.ProfilePicturePath))
        {
            profilePic = currentUser.ProfilePicturePath;
        }
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - proiect</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/proiect.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <style>
        body {
            background-color: #e3e1d3;
        }

        .content-wrapper {
            background-color: #bfdbd1;
            border: 3px solid #5a8c8a;
            border-radius: 10px;
            padding: 20px;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark" style="background-color: #5a8c8a;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Feed">SimsTagram</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Home" asp-action="Feed">Home</a>
                            </li>
                            /*
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Profile" asp-action="MyProfile">My Profile</a>
                            </li> 
                            */
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Conversation" asp-action="Index">Inbox</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Group" asp-action="Index">Groups</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Notifications" asp-action="Index">
                                    <i class="bi bi-bell me-1"></i> Notifications
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Home" asp-action="Feed">Home</a>
                            </li>
                        }
                    </ul>

                    <form asp-controller="Profile" asp-action="Index" method="get" class="d-flex ms-auto" role="search">
                        <input class="form-control me-2" type="search" name="search" placeholder="Search users..." aria-label="Search">
                        <button class="btn" type="submit" style="background-color: #bfdbd1; color: black;">Search</button>
                    </form>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center text-white" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="@profilePic"
                                         class="rounded-circle me-2"
                                         style="width: 32px; height: 32px; object-fit: cover; border: 2px solid #fff;" />
                                    <span>@currentUser?.DisplayName</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" asp-controller="Profile" asp-action="MyProfile">My Profile</a></li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index">Admin Panel</a></li>
                                    }
                                    <li>
                                        <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="dropdown-item p-0">
                                            <button type="submit" class="btn btn-link dropdown-item">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container my-4">
        <div class="content-wrapper">
            <div class="row">
                <div class="@((User.Identity.IsAuthenticated) ? "col-md-9" : "col-12")">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="col-md-3">
                        @await Component.InvokeAsync("FriendsListSidebar")
                    </div>
                }
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted mt-3">
        <div class="container">
            &copy; 2025 - proiect - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>