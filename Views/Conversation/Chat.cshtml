@model proiect.Models.Conversation
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Chat";
    var currentUserId = UserManager.GetUserId(User);
    var partner = Model.User1Id == currentUserId ? Model.User2 : Model.User1;
}

<style>
    .chat-background {
        background-image: url('/images/ChatBG.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }
</style>

<h2>Chat with @partner.DisplayName (@partner.Email)</h2>

<div class="border rounded p-3 mb-3 chat-background" style="height: 400px; overflow-y: auto;">
    @foreach (var message in Model.Messages.OrderBy(m => m.SentAt))
    {
        var isCurrentUser = message.SenderId == currentUserId;
        <div class="d-flex @(isCurrentUser ? "justify-content-end" : "justify-content-start") mb-2">
            <div class="p-2 rounded border" style="max-width: 60%; background-color: #ffd4e8;">
                <strong>@message.Sender?.DisplayName</strong>
                <div>@message.Content</div>
                <div class="text-muted" style="font-size: small;">@message.SentAt.ToString("g")</div>
            </div>
        </div>
    }
</div>

<form asp-controller="Conversation" asp-action="SendMessage" method="post" class="mt-3">
    <input type="hidden" name="conversationId" value="@Model.Id" />
    <div class="input-group">
        <input type="text" name="content" class="form-control" placeholder="Type your message..." required />
        <button type="submit" class="btn btn-primary" style="background-color: #4e8885">Send</button>
    </div>
</form>