@model proiect.Models.GroupCreateViewModel

<h2>Create Group</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label for="Name" class="form-label">Group Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="card shadow-sm mb-3">
        <div class="card-header bg-light fw-bold">
            Select friends to add:
        </div>
        <div class="card-body">
            @if (Model.AvailableUsers != null && Model.AvailableUsers.Any())
            {
                foreach (var user in Model.AvailableUsers)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="SelectedUserIds" value="@user.Id" id="user_@user.Id" />
                        <label class="form-check-label" for="user_@user.Id">@user.DisplayName (@user.Email)</label>
                    </div>
                }
            }
            else
            {
                <p>You don't have any friends to add.</p>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary" style="background-color:#4e8885">Create</button>
    <a asp-action="Index" class="btn btn-secondary" style="background-color:#e85743">Cancel</a>
</form>