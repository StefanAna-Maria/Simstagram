@{
    ViewData["Title"] = "Send Warning";
    var users = ViewBag.Users as List<proiect.Models.ApplicationUser>;
}

<h2>Send Warning</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-controller="Admin" asp-action="SendWarning" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label for="recipientId" class="form-label">Select User</label>
        <select name="recipientId" class="form-select" required>
            <option value="" disabled selected>-- Choose a user --</option>
            @foreach (var user in users)
            {
                <option value="@user.Id">@user.DisplayName (@user.Email)</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label for="message" class="form-label">Message</label>
        <textarea name="message" class="form-control" rows="4" placeholder="Enter warning message..." required></textarea>
    </div>

    <button type="submit" class="btn btn-danger">Send Warning</button>
</form>